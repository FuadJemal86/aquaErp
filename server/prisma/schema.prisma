generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique(map: "Admin_email_key")
  password  String
  image     String?
  role      role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Customer {
  id        Int      @id @default(autoincrement())
  full_name String
  phone     String
  address   String
  id_card   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales_credit Sales_credit[]

  @@map("customer")
}

model Product_category {
  id           Int            @id @default(autoincrement())
  name         String
  description  String?
  productTypes Product_type[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("product_category")
}

model Product_type {
  id          Int      @id @default(autoincrement())
  name        String
  measurement String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product_Stock     Product_stock[]
  bank_transaction  Buy_transaction[]
  sales_transaction Sales_transaction[]

  product_category_id Int
  Product_category    Product_category @relation(fields: [product_category_id], references: [id])

  @@map("product_type")
}

model Product_stock {
  id                 Int      @id @default(autoincrement())
  amount_money       Float
  price_per_quantity Float
  quantity           Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  product_type_id Int
  Product_type    Product_type @relation(fields: [product_type_id], references: [id])

  @@map("product_stock")
}

model Bank_list {
  id             Int      @id @default(autoincrement())
  branch         String
  account_number String
  owner          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  buy_transaction        Buy_transaction[]
  bank_transaction       Bank_transaction[]
  bank_balance           Bank_balance[]
  buy_credit_transaction Buy_credit_transaction[]
  sales_transaction      Sales_transaction[]

  @@map("bank_list")
}

model Buy_transaction {
  id             Int            @id @default(autoincrement())
  Type_id        Int
  Bank_Id        Int
  price          Float
  quantity       Int
  payment_method payment_method
  total_money    Float
  supplier_name  String
  transaction_id String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  product_type Product_type @relation(fields: [Type_id], references: [id])
  bank_list    Bank_list    @relation(fields: [Bank_Id], references: [id])

  @@index([price, transaction_id])
  @@map("buy_transaction")
}

model Buy_credit {
  id             Int      @id @default(autoincrement())
  transaction_id String
  total_money    Float
  description    String
  issued_date    DateTime @default(now())
  return_date    DateTime
  status         credit
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([transaction_id])
  @@map("buy_credit")
}

model Bank_balance {
  id        Int      @id @default(autoincrement())
  Bank_id   Int
  balance   Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bank_list Bank_list @relation(fields: [Bank_id], references: [id])

  @@map("bank_balance")
}

model Bank_transaction {
  id             Int      @id @default(autoincrement())
  Bank_id        Int
  in             Float
  out            Float
  balance        Float
  transaction_id String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  bank_list Bank_list @relation(fields: [Bank_id], references: [id])

  @@index([transaction_id])
  @@map("bank_transaction")
}

model Buy_credit_transaction {
  id                  Int            @id @default(autoincrement())
  Bank_id             Int
  transaction_id      String
  amount_payed        Float
  outstanding_balance Float
  image               String
  payment_method      payment_method
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  bank_list Bank_list @relation(fields: [Bank_id], references: [id])

  @@index([transaction_id])
  @@map("buy_credit_transaction")
}

model Cash_transaction {
  id             Int      @id @default(autoincrement())
  in             Float
  out            Float
  transaction_id String
  manager_id     Int
  casher_id      Int
  updatedAt      DateTime @updatedAt

  @@index([transaction_id])
  @@map("cash_transaction")
}

model Sales_credit {
  id             Int      @id @default(autoincrement())
  Customer_id    Int
  transaction_id String
  total_money    Float
  return_date    DateTime
  issued_date    DateTime
  status         credit
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  customer Customer @relation(fields: [Customer_id], references: [id])

  @@index([transaction_id])
  @@map("sales_credit")
}

model Sales_transaction {
  id             Int            @id @default(autoincrement())
  Type_id        Int
  Bank_id        Int
  Credit_id      Int?
  customer_id    Int?
  walker_id      Int?
  manager_id     Int?
  casher_id      Int?
  transaction_id String
  price          Float
  quantity       Int
  payment_method payment_method
  customer_type  customer_type
  status         sales_status
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  product_type Product_type @relation(fields: [Type_id], references: [id])
  bank_list    Bank_list    @relation(fields: [Bank_id], references: [id])

  @@index([transaction_id, price])
  @@map("sale_transaction")
}

model Sales_credit_transaction {
  id                  Int                  @id @default(autoincrement())
  transaction_id      String
  amount_payed        Float
  payment_method      payment_sales_method
  outstanding_balance Float
  image               String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  @@index([transaction_id])
  @@map("sales_status")
}

enum role {
  ADMIN
  CASHER
}

enum payment_method {
  CASH
  BANK
  CREDIT
}

enum credit {
  ACCEPTED
  OVERDUE
  PAYED
}

enum customer_type {
  WALKER
  REGULAR
}

enum sales_status {
  DONE
  CANCEL
}

enum payment_sales_method {
  CASH
  BANK
}
